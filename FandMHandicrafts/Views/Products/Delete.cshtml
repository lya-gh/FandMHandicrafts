@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row text">
    <div class="col-md-8 offset-2" style="margin-top:20px">

        <p>
            <h4> Remove @Model.ProductName ?</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">


                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>
                    <input asp-for="ProductImage" class="form-control" readonly />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" readonly="@true" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <input asp-for="ProductDescription" class="form-control" readonly="@true" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-top:5px;">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" style="font-family: Verdana;font-size: 12px;">
                    </form>
                    <a class="btn btn-outline-secondary" style="font-family: Verdana;font-size: 12px;margin-top:90px;" asp-controller="Products" asp-action="Index">
                        Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
