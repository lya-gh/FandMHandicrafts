@model List<Product>
@{
    ViewData["Title"] = "List of Products";
}



<div class="text-white" style="position:fixed; right:500px; bottom:20px;">
    <a style="width:250px" asp-controller="Products" asp-action="Create" class="btn btn-success"><i class"bi bi-plus-circle"></i>ADD A NEW PRODUCT</a>
</div>

<div class="row">
    <div class="col-md-12">
        <br>
        <h4>HANDICRAFT PRODUCT LIST</h4>
        <br>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                    <th>Product Category</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ProductImage" alt="@item.ProductName" style="width:100%; height:100px" />
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductDescription)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductCategory)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" style="width:100px;margin-bottom:2px;font-family: Verdana;font-size: 12px;" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger text-white" style="width:100px; font-family: Verdana;font-size: 12px;" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Delete</a>
                        </td>
                    </tr>
                   
                }


            </tbody>

        </table>

    </div>


</div>

