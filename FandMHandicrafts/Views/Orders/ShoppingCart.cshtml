@using FandMHandicrafts.Data.ViewModels;
@model ShoppingCartViewModel


@{
    ViewData["Title"] = "Shopping Cart Summary";
} 

<div class="row" style="margin-top:30px">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2> Shopping Cart Summary </h2>
            <br />
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Product.ProductName</td>
                        <td class="align-middle">@item.Product.ProductPrice.ToString("c")</td>
                    <td class="align-middle">@item.ProductQuantity</td>
                    <td class="align-middle">@((item.ProductQuantity * item.Product.ProductPrice).ToString("c"))</td>
                    <td class="align-middle">
                                                
                        <a class="text-success" asp-controller="Orders" asp-action="AddItemToCart"
                        asp-route-id="@item.Product.Id" >
                         <i class="bi bi-plus-circle"></i></a>
                        
                            &nbsp;|&nbsp;
                        
                        <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromCart"
                          asp-route-id="@item.Product.Id">
                          <i class="bi bi-dash-circle"></i>
                        </a>

                    </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        <b><a style="font-size:16px">@Model.ShoppingCartTotal.ToString("c")</b></a>
                    </td>
                    <td>
                        <a class="btn" style="background-color:#ef2021;color:#f9f6f3;font-family:Verdana;font-size:12px"  asp-action="Checkout" asp-controller="Orders">
                            Checkout
                        </a>

                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center" style="margin-bottom: 200px;">
            <div class="btn-btn-group">
                <a class="btn" style="background-color:#ef2021;color:#f9f6f3;font-family: Verdana;font-size: 12px;" asp-controller="Products" asp-action="Index">
                    CONTINUE SHOPPING
                </a>
            </div>
        </div>

    </div>


</div>